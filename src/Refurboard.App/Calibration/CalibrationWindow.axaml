<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Refurboard.App.Calibration.CalibrationWindow"
        mc:Ignorable="d"
        x:CompileBindings="False"
        Background="#010409"
        WindowState="FullScreen"
        SystemDecorations="None"
        Topmost="True"
        CanResize="False"
        KeyDown="OnKeyDownHandler">
    <Grid Name="RootGrid"
          Background="#010409"
          PointerPressed="OnPointerPressed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="#0f172a" Padding="24" Margin="32" CornerRadius="16">
            <StackPanel>
                <TextBlock Text="Display Calibration" FontSize="32" FontWeight="Bold" Foreground="#f8fafc" />
                <TextBlock Text="Follow the targets clockwise using your IR pen or mouse." Foreground="#cbd5f5" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Border CornerRadius="160" BorderBrush="#f87171" BorderThickness="3"
                    HorizontalAlignment="{Binding TargetHorizontalAlignment}"
                    VerticalAlignment="{Binding TargetVerticalAlignment}"
                    Margin="64">
                <Grid Width="120" Height="120">
                    <Ellipse Fill="#0f172a" Stroke="#fbbf24" StrokeThickness="4" />
                    <TextBlock Text="âœ±"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="64"
                               Foreground="#f8fafc" />
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="32" ColumnDefinitions="*,Auto">
            <TextBlock Text="{Binding Instruction}" FontSize="20" Foreground="#f8fafc" />
            <Button Content="Cancel"
                    Click="OnCancelClicked"
                    Grid.Column="1"
                    Padding="22,10"
                    Margin="16,0,0,0" />
        </Grid>
    </Grid>
</Window>
