{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.refurboard.dev/v1/refurboard-ir-config.schema.json",
  "title": "Refurboard IR Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": ["metadata", "camera", "calibration"],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schemaVersion", "appVersion", "lastUpdatedUtc", "locale"],
      "properties": {
        "schemaVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "appVersion": {
          "type": "string",
          "minLength": 1
        },
        "lastUpdatedUtc": {
          "type": "string",
          "format": "date-time"
        },
        "locale": {
          "type": "string",
          "minLength": 2
        }
      }
    },
    "camera": {
      "type": "object",
      "additionalProperties": false,
      "required": ["deviceId", "resolution", "thresholds"],
      "properties": {
        "deviceId": {
          "type": "string",
          "minLength": 1
        },
        "friendlyName": {
          "type": "string"
        },
        "resolution": {
          "type": "object",
          "additionalProperties": false,
          "required": ["width", "height"],
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 64
            },
            "height": {
              "type": "integer",
              "minimum": 64
            }
          }
        },
        "frameRate": {
          "type": "number",
          "minimum": 1
        },
        "fieldOfViewDegrees": {
          "type": "number",
          "minimum": 1,
          "maximum": 180
        },
        "isMirrored": {
          "type": "boolean"
        },
        "exposure": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode"],
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["Auto", "Manual"]
            },
            "targetLuma": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "shutterMicroseconds": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "thresholds": {
          "type": "object",
          "additionalProperties": false,
          "required": ["intensity", "minArea", "maxArea"],
          "properties": {
            "intensity": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "minArea": {
              "type": "number",
              "minimum": 0
            },
            "maxArea": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "calibration": {
      "type": "object",
      "additionalProperties": false,
      "required": ["screenBoundsPx", "corners"],
      "properties": {
        "screenBoundsPx": {
          "type": "object",
          "additionalProperties": false,
          "required": ["width", "height"],
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 64
            },
            "height": {
              "type": "integer",
              "minimum": 64
            }
          }
        },
        "corners": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "pixel", "normalized"],
            "properties": {
              "name": {
                "type": "string",
                "enum": ["TopLeft", "TopRight", "BottomLeft", "BottomRight"]
              },
              "pixel": {
                "type": "object",
                "additionalProperties": false,
                "required": ["x", "y"],
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" }
                }
              },
              "normalized": {
                "type": "object",
                "additionalProperties": false,
                "required": ["x", "y"],
                "properties": {
                  "x": { "type": "number", "minimum": 0, "maximum": 1 },
                  "y": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              }
            }
          }
        },
        "completedAtUtc": {
          "type": "string",
          "format": "date-time"
        },
        "deviceFingerprint": {
          "type": "string"
        }
      }
    }
  }
}
