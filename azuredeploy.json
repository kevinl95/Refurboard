{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2016-12-01",
      "name": "[variables('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": false,
        "allowBlobPublicAccess": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2018-02-01",
      "name": "[concat(variables('storageAccountName'), '/default/$web')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "DeployStaticWebsiteFiles",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', variables('storageAccountName'), 'default', '$web')]"
      ],
      "kind": "AzureCLI",
      "properties": {
        "azCliVersion": "2.40.0",
        "timeout": "PT15M",
        "retentionInterval": "P1D",
        "scriptContent": "az storage blob upload-batch -d $web --account-name ${storageAccountName} --source https://github.com/kevinl95/refurboard/archive/refs/heads/main.zip --pattern */client/* --destination-path /",
        "supportingScriptUris": [],
        "forceUpdateTag": "1.0",
        "environmentVariables": [
          {
            "name": "storageAccountName",
            "value": "[variables('storageAccountName')]"
          }
        ]
      }
    }
  ],
  "variables": {
    "storageAccountName": "[concat('stor', uniqueString(resourceGroup().id))]"
  },
  "outputs": {
    "staticWebsiteUrl": {
      "type": "string",
      "value": "[concat('https://', variables('storageAccountName'), '.z13.web.core.windows.net')]"
    }
  }
}