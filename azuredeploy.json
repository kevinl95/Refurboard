{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2016-12-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": false
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2018-02-01",
      "name": "[concat(parameters('storageAccountName'), '/default/$web')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ],
      "properties": {
        "publicAccess": "Blob"
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "DeployStaticWebsiteFiles",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', concat(parameters('storageAccountName'), '/$web'))]"
      ],
      "kind": "AzureCLI",
      "properties": {
        "azCliVersion": "2.40.0",
        "timeout": "PT15M",
        "retentionInterval": "P1D",
        "scriptContent": "[concat('az storage blob upload-batch -d $web --account-name ', parameters('storageAccountName'), ' --source https://github.com/', 'kevinl95, '/', 'refurboard, '/archive/refs/heads/', 'main, '.zip --pattern */client/* --destination-path /')]",
        "supportingScriptUris": [],
        "forceUpdateTag": "1.0"
      }
    }
  ],
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the storage account to create. Must be globally unique and between 3 and 24 characters long."
      },
      "minLength": 3,
      "maxLength": 24,
      "allowedPattern": "^[a-z0-9]+$"
    }
  },
  "outputs": {
    "staticWebsiteUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('storageAccountName'), '.z13.web.core.windows.net')]"
    }
  }
}
